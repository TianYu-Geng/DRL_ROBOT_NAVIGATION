<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="my_room_world">

    <!-- Include default physics and GUI -->
    <include>
      <uri>model://sun</uri>
    </include>

    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- 房间四面墙体 -->
    <model name="room_walls">
      <static>true</static>
      <link name="wall_link">

        <!-- 北墙 -->
        <visual name="north_wall_visual">
          <geometry>
            <box>
              <size>5 0.1 2.5</size>
            </box>
          </geometry>
          <pose>0 2.5 1.25 0 0 0</pose>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
          </material>
        </visual>

        <!-- 南墙 -->
        <visual name="south_wall_visual">
          <geometry>
            <box>
              <size>5 0.1 2.5</size>
            </box>
          </geometry>
          <pose>0 -2.5 1.25 0 0 0</pose>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
          </material>
        </visual>

        <!-- 东墙 -->
        <visual name="east_wall_visual">
          <geometry>
            <box>
              <size>0.1 5 2.5</size>
            </box>
          </geometry>
          <pose>2.5 0 1.25 0 0 0</pose>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
          </material>
        </visual>

        <!-- 西墙 -->
        <visual name="west_wall_visual">
          <geometry>
            <box>
              <size>0.1 5 2.5</size>
            </box>
          </geometry>
          <pose>-2.5 0 1.25 0 0 0</pose>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
          </material>
        </visual>

      </link>
    </model>

    <!-- 灯光 -->
    <light name="room_light" type="point">
      <pose>0 0 5 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
      <attenuation>
        <range>20</range>
        <constant>0.5</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <cast_shadows>true</cast_shadows>
    </light>

  </world>
</sdf>
